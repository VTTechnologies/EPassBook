<script type="text/javascript">
        function IsManager(role, id) {
            if (role == 'Admin') {
                $("#AlertMessage").text("Admin cannot be deleted");
                $("#btnNo").hide();
                $("#btnYes").hide();
                $("#btnOk").hide();
                $("#AlertModal").modal('show');
                return false
            }
            else {
                $("#AlertMessage").text("Are you sure you wish to delete this user?");
                $("#btnNo").show();
                $("#btnYes").show();
                $("#btnOk").hide();
                $("#AlertModal").modal('show');
                $("#IdForDelete").val(id);
                return false
            }
        }

        function ReloadPage() {
            window.location = '@Url.Action("Index")';
        }

        $("#btnYes").click(function () {
            var label = $("#IdForDelete");
            var id = label.val();
            $("#AlertModal").modal('hide');
            var url = '@Url.Action("Delete","User")';
            var data = { id: id };
            $.ajax(
                {
                    type: "GET",
                    url: url,
                    data: data,
                    contentType: "application/json; charset=utf-8",
                    success: function (response) {
                        $("#AlertMessage").text("User deleted successfully");
                        $("#btnNo").hide();
                        $("#btnYes").hide();
                        $("#btnOk").show();
                        $("#AlertModal").modal('show');
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
        });

        $("#btnNo").click(function () {
            $("#AlertModal").modal('hide');
        });
</script>

