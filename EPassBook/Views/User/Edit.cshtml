                @Html.DropDownListFor(model => model.RoleId, ViewBag.Roles as SelectList, "SELECT ROLE", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
            </div>
        </div>

