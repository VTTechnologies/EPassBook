@model EPassBook.Models.InstallmentDetailsViewModel
@{
    if (ViewBag.Message != null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
<section class="content" id="cityengineer">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">

                </div>
                @using (Html.BeginForm("CityEngineer", "WorkFlow", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()

                <div class="box-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.Partial("_CommonSiteEngineer", Model)

                    <div class="form-group">
                        @Html.LabelFor(model => model._Comments, "Comments", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model._Comments, 5, 100, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model._Comments, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @Html.CheckBox("ChkSign_CE", "no") @Html.Label("City Engineer")
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <label id="lblmsg_CE" class="text-danger"></label>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Send to Cheif Officer" onclick="return validation_CE();" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</section>


@if (!EPassBook.Helper.AuthorizationForView.IsAuthorize(EPassBook.Helper.Common.CityEngineer))
{
    <script type="text/javascript">
        $(document).ready(function () {
            debugger;
            $('#cityengineer').find(':input').prop('disabled', true);
        });
    </script>
}
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            $("#ChkSign_CE").attr("checked", true)
            alert("submited successfully");
            window.location.href = "/WorkFlow/Index/";
        };
    </script>
}

<script type="text/javascript">

    $(document).ready(function () {      

        $("#ChkSign_CE").change(function () {
            if ($("#ChkSign_CE").is(":checked")) {
                $("#hiddforCheckbox_CE").val("Checked");
            }
            else {
                $("#hiddforCheckbox_CE").val("no");
            }
        })
    });

    function validation_CE() {
        if ($("#hiddforCheckbox_CE").val() == "no") {
            $("#lblmsg_CE").text("Please sign in to confirm your submission");
            return false;
        }
        return true;
    }

</script>

