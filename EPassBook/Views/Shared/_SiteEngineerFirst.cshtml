@model EPassBook.Models.SiteEngFirstCommentViewModel
@{
    if (ViewBag.Message != null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
<style>
    #errmsgB, #errmsgL, .errmsg {
        color: red;
    }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
<section class="content" id="firstDiv">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">

                </div>
                @using (Html.BeginForm("Recommend", "WorkFlow", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                {
                    if (!ViewBag.isRecommended)
                    {
                        <div class="box-body">
                            <div class="form-group">
                                @Html.Label("Select Comment", "SelectComment", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-8">
                                    @*@Html.DropDownList("ddlComments", new List<SelectListItem>{
                                        new SelectListItem { Text = "SELECT", Value = "0" },
                                        new SelectListItem {Text= "Centre line is not proper", Value ="1"},
                                        new SelectListItem { Text = "Foundation state to rest doundation in not hard", Value = "2" },
                                        new SelectListItem { Text = "Column footing reinfornment is not as per design/properly laid", Value = "3" },},
                                        htmlAttributes: new { @class = "form-control" })*@
                                    <select class="selectpicker form-control" multiple data-live-search="false">
                                        <option>Centre line is not proper</option>
                                        <option>Foundation state to rest foundation in not hard</option>
                                        <option>Column footing reinforcement is not as per design/properly laid</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Comment", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-8">
                                    @Html.TextArea("txtFirstComment", null, 5, 30, new { @class = "form-control" })
                                    <div style="height:20px">
                                        <span id="commentError" class="errmsg"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-4 col-md-10">
                                    <input type="submit" value="Recommend" id="recommend" class="btn btn-primary" />
                                    <input type="submit" value="Reject" id="reject" class="btn btn-danger" />
                                </div>
                            </div>
                            <br />
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>
@if (ViewBag.isRecommended != null)
{
    <script type="text/javascript">
        window.onload = function () {
        var check = '@ViewBag.isRecommended'

            if (check =='true') {
                $('#secondDiv').hide();
                $('#firstDiv').show();
        }
        else {
            $('#secondDiv').show();
            $('#firstDiv').hide();
            }
        };
    </script>
}
