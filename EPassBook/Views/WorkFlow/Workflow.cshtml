@model EPassBook.Models.BeneficiaryViewModel

@{
    /**/

    ViewBag.Title = "Home Page";

}
<style>
    .panel-heading {
        padding-bottom: 0px;
        padding-right: 15px;
        padding-left: 15px;
        padding-top: 10px;
        border-bottom: 0px solid transparent;
    }
</style>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Beneficiary Page
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Beneficiary Page</li>

        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                    </div>
                    <div class="box-body">
                            @Html.Partial("_InstallmentDetails", Model)
                        </div>
                    </div>
                </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-xs-12">
                @*<div class="panel with-nav-tabs panel-primary">*@
                    <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs">
                            <li id="li_dataeng"><a href="#tabdataEngineer" class="nav_link" data-toggle="tab">Beneficiary Details</a></li>
                            <li id="li_siteengneer"><a href="#tabSiteEngineer" class="nav_link" data-toggle="tab">Site Engineer</a></li>
                            <li id="li_ProjectEngineer"><a href="#tabProjectEngineer" class="nav_link" data-toggle="tab">Project Engineer</a></li>
                            <li id="li_cityengineer"><a href="#tabCityEngineer" class="nav_link" data-toggle="tab">City Engineer</a></li>
                            <li id="li_chiefOfficer"><a href="#tabchiefOfficer" class="nav_link" data-toggle="tab">Chief Officer</a></li>
                            <li id="li_accountant"><a href="#tabAccountant" class="nav_link" data-toggle="tab">Accountant</a></li>
                        </ul>
                    </div>
                    <div class="panel-body">
                        <div class="tab-content">
                            <div class="tab-pane fade" id="tabdataEngineer">@Html.Action("DataEntry", "WorkFlow")</div>
                            <div class="tab-pane fade" id="tabSiteEngineer">@Html.Action("SiteEngineer", "WorkFlow")</div>
                            <div class="tab-pane fade" id="tabProjectEngineer">@Html.Action("ProjectEngineer", "WorkFlow")</div>
                            <div class="tab-pane fade" id="tabCityEngineer">@Html.Action("CityEngineer", "WorkFlow")</div>
                            <div class="tab-pane fade" id="tabchiefOfficer">@Html.Action("ChiefOfficer", "WorkFlow")</div>
                            <div class="tab-pane fade" id="tabAccountant">@Html.Action("Accountant", "WorkFlow")</div>
                        </div>
                    </div>
                @*</div>*@
            </div>           
        </div>
    </section>
</div>
@*<div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">

</div>*@
<div class="container">
   
</div>

<script type="text/javascript">
    $(document).ready(function () {

        var text = '@ViewBag.RoleName'; //Accessing the Json Object from ViewBag
        if (text == 'SiteEngineer') {
            $('#li_siteengneer').addClass("active");
            $('#tabSiteEngineer').addClass("active in");
        }

        if (text == 'ProjectEngineer') {
            $('#li_ProjectEngineer').addClass("active");
            $('#tabProjectEngineer').addClass("active in");
        }

        if (text == 'CityEngineer') {
            $('#li_cityengineer').addClass("active");
            $('#tabCityEngineer').addClass("active in");
        }

        if (text == 'ChiefOfficer') {
            $('#li_chiefOfficer').addClass("active");
            $('#tabchiefOfficer').addClass("active in");
        }

        if (text == 'Accountant') {
            $('#li_Accountant').addClass("active");
            $('#tabAccountant').addClass("active in");
        }
    });
</script>

